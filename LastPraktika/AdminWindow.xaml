<Window x:Class="LastPraktika.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LastPraktika"
        mc:Ignorable="d"
        Title="AdminWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="0.8*"/>
            <RowDefinition/>
            <RowDefinition Height="0.7*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="0" Content="Роли" Margin="10" Click="Button_Click_2"/>
        <Button Grid.Column="1" Content="Сотрудники" Margin="10" Click="Button_Click" />
        <Button Grid.Column="2" Content="Данные для авторизации" Margin="10" Click="Button_Click_1"/>
        <Button Grid.Column="3" Content="Магазины" Margin="10" Click="Button_Click_3"/>
        <Frame x:Name="PageFrame" NavigationUIVisibility="Hidden" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="4" Grid.RowSpan="4" />
    </Grid>
</Window>
